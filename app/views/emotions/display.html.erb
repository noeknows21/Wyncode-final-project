
<% body = JSON.parse(@response.body) %>
<%#= body %>
<% smile = 0 %>
<% surpirse = 0 %>
<% negative = 0 %>


<% body['frames'].each do |f| %>
  <% f['person']['emotions'].each do |k,v| %>
    <% case k %>
    <% when "smile" %>
      <% smile += v %>
      <%# when "surprise" %>
      <%# surprise += v %>
    <% when "negative" %>
      <% negative += v %>
    <% end %>
  <% end %>
<% end %>

<%= "Smile: #{smile.round(2)}" %>
<%= "Negative: #{negative.round(2)}" %>
